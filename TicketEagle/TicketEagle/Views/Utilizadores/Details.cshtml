@model TicketEagle.Models.Utilizador

@{
    ViewData["Title"] = "Details";
}
<br />
<br />
<br />
<br />
<br />
<br />
<br />
<h1>Details</h1>

<div>
    <h4>Utilizador</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Nome)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Nome)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Email)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Email)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Password)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Password)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Foto)
        </dt>
        <dd class="col-sm-10">
            <img src="~/Imagens/Users/@Model.Foto" height="100" alt="imagem do utilizador @Model.Nome" title="@Model.Nome" />
        </dd>
    </dl>
</div>


@if (Model.Bilhete.Count() == 0)
{
    <h4>Lista de consultas associadas ao/à @Model.Nome </h4>
}
else
{

    <table class="table">
        <tr>
            <th>Data de Compra</th>
            <th>Descrição</th>
        </tr>
        @foreach (var bilhete in Model.Bilhete)
        { // listar todos os bilhetes deste utilizador
            <tr>
                <td>@bilhete.DataCompra</td>
                <td>@bilhete.Descrição</td>
                <td>@bilhete.EvId</td>
            </tr>
        }
    </table>
}


<div>
    <a asp-action="Edit" asp-route-id="@Model.UserID">Editar</a> |
    <a asp-action="Index">Voltar</a>
</div>
