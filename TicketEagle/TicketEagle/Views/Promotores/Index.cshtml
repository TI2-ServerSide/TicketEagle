@model IEnumerable<TicketEagle.Models.Promotor>

@{
    ViewData["Title"] = "Index";
}

<h1>Lista de Promotores</h1>

<p>
    <a asp-action="Create" class="btn btn-info">Criar Promotor</a>
</p>
@if (Model.Count() > 0)
{
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Nome)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Nome)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.ID" class="btn btn-success">Editar</a> 
                        <a asp-action="Details" asp-route-id="@item.ID" class="btn btn-secondary">Detalhes</a> 
                        <a asp-action="Delete" asp-route-id="@item.ID" class="btn btn-danger">Apagar</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>


}
else
{
    <kbd>Não há Promotores disponiveis</kbd>
}

